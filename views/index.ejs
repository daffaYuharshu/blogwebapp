<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My-Blogger</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="styles/main.css" />
    <style>
      body {
        background-color: #f4f7f7;
      }
      header {
        text-align: center;
      }
      .sub {
        text-align: center;
      }
      .blog {
        text-align: center;
        border: 1px solid #5da0a2;
        padding: 50px;
        margin: 0 200px 0 200px;
        background-color: white;
      }
      footer {
        text-align: center;
        color: #5da0a2;
      }
      .title {
        font-size: 72px;
        color: #34495e;
        text-shadow: 2px 3px 3px grey;
        /* font-style: italic; */
      }
      .sub-title {
        color: #5da0a2;
        font-style: italic;
        display: inline-block;
      }
      .btn-create {
        display: inline-block;
        background-color: #5da0a2;
        border: 1px solid #34495e;
        color: #f4f7f7;
        padding: 3px 15px 3px 15px;
        border-radius: 5%;
      }
      .btn-create:hover {
        background-color: #34495e;
        border: 1px solid #5da0a2;
        color: #aacfd0;
      }
      .btn-edit {
        background-color: #5da0a2;
        border-color: #34495e;
        color: #f4f7f7;
      }
      .btn-edit:hover {
        background-color: #369699;
        border-color: 1px solid #aacfd0;
        color: white;
      }
      .form-btn {
        display: flex;
        gap: 1rem;
      }
      .btn-size {
        font-size: 25px;
      }
      .main-create {
        text-align: center;
        margin: 50px 450px 50px 450px;
        border: 1px solid #5da0a2;
        padding: 50px;
        background-color: white;
      }
      /* .body{
    margin: 50px;
    padding: 5px;
    border: 1px solid #34495E;
} */
    </style>
  </head>
  <body>
    <header>
      <h1 class="title">My-<span style="color: #5da0a2">Blogger</span></h1>
    </header>
    <main>
      <div class="sub">
        <h2 class="sub-title">Create your own blog here</h2>
      </div>
      <div class="blog">
        <% if(posts.length > 0) { %>
        <form
          action="/create"
          method="GET"
          style="text-align: right; margin-bottom: 25px"
        >
          <input type="submit" value="Write ðŸ“" class="btn-create btn-size" />
        </form>
        <% posts.forEach(post => { %>
        <div class="card mb-5" style="text-align: justify">
          <div class="card-body">
            <h5 class="card-title mb-3" style="font-size: xx-large">
              <%= post.title %>
            </h5>
            <p class="card-text"><%= post.desc %></p>
            <div class="form-btn">
              <form
                action="/edit/<%= post.id %>"
                method="GET"
                class="form-edit"
              >
                <input
                  type="submit"
                  value="Edit"
                  class="btn btn-primary btn-edit"
                />
              </form>
              <form action="/delete/<%= post.id %>" method="GET">
                <input
                  type="submit"
                  value="Delete"
                  class="btn btn-danger"
                  onclick="return confirm('Do you want to delete this post?');"
                />
              </form>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <form action="/create" method="GET">
          <input type="submit" value="Write ðŸ“" class="btn-create btn-size" />
        </form>
        <% } %>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
