<%- include("partials/header.ejs") %>
<main>
  <div class="sub">
    <h2 class="sub-title">Create your own blog here</h2>
    
  </div>
  <div class="blog">
    <% if(posts.length > 0)  { %>
      <form action="/create" method="GET" style="text-align: right; margin-bottom: 25px;">
        <input type="submit" value="Write 📝" class="btn-create btn-size"/>
      </form>
      <% posts.forEach(post => { %>
        <div class="card mb-5" style="text-align: justify;">
          <div class="card-body">
            <h5 class="card-title mb-3" style="font-size: xx-large;"><%= post.title %></h5>
            <p class="card-text"><%= post.desc %></p>
            <div class="form-btn">
              <form action="/edit/<%= post.id %>" method="GET" class="form-edit">
                <input type="submit" value="Edit" class="btn btn-primary btn-edit" />
              </form>
              <form action="/delete/<%= post.id %>" method="GET" >
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Do you want to delete this post?');"/>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
      <% } else { %>
        <form action="/create" method="GET" >
          <input type="submit" value="Write 📝" class="btn-create btn-size"/>
        </form>
        <% } %>
  </div>
</main>
<%- include("partials/footer.ejs") %>
